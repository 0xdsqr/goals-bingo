{
  "name": "goals-bingo",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*",
    "tooling/*"
  ],
  "scripts": {
    "dev": "bun run --filter @goals-bingo/bingo dev",
    "dev:convex": "bun run --filter @goals-bingo/bingo dev:convex",
